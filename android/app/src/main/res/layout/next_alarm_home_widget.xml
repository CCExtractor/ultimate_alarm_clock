<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/next_alarm_home_widget_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

<!--        <Button-->
<!--            android:id="@+id/add_alarm_button_next_alarm_widget"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_margin="5dp"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:scaleType="fitCenter"-->
<!--            android:adjustViewBounds="true"-->
<!--            android:background="@drawable/add_alarm_button_background" />-->

        <TextView
            android:id="@+id/next_alarm"
            style="@style/Widget.Android.AppWidget.InnerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next_alarm"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repeat_days"
            style="@style/Widget.Android.AppWidget.RingsIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/next_alarm_repeat_days_and_label"
            android:textColor="#AFFC41"
            android:layout_marginBottom="5dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/alarm_date_n_time"
            style="@style/Widget.Android.AppWidget.RingsIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/next_alarm_date_n_time"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rings_in"
            style="@style/Widget.Android.AppWidget.RingsIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:alpha="190"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/rings_in"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shared_alarm_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_shared_alarm"
                android:tint="#AFFC41"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_location"
                android:tint="#AFFC41"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/activity_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_activity"
                android:tint="#AFFC41"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_weather"
                android:tint="#AFFC41"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/qr_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_qr"
                android:tint="#AFFC41"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/shake_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_shake"
                android:tint="#AFFC41"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/maths_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_maths"
                android:tint="#AFFC41"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/pedometer_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_pedometer"
                android:tint="#AFFC41"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>